        padding: 2rem 1rem;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
      }

      .about h2 {
        color: #1a5f2a;
        margin-bottom: 1rem;
        font-size: 1.5rem;
      }

      .about p {
        color: #555;
        margin-bottom: 1rem;
      }

      .profile {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1a5f2a, #f4a534);
        margin: 0 auto 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
      }

      /* Tours Section */
      .tours {
        padding: 2rem 1rem;
        background: #f8f9fa;
      }

      .tours h2 {
        text-align: center;
        color: #1a5f2a;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
      }

      .tours-grid {
        display: grid;
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .tour-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .tour-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
      }

      .tour-card h3 {
        color: #1a5f2a;
        margin-bottom: 0.5rem;
        font-size: 1.25rem;
      }

      .tour-meta {
        display: flex;
        gap: 1rem;
        margin-bottom: 0.75rem;
        font-size: 0.9rem;
        color: #666;
      }

      .tour-meta span {
        display: flex;
        align-items: center;
        gap: 0.25rem;
      }

      .tour-card p {
        color: #555;
        margin-bottom: 1rem;
        font-size: 0.95rem;
      }

      .highlights {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

