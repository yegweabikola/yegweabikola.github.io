      }

      /* Header & Hero */
      .hero {
        background-size: cover;
        background-position: center;
        color: white;
        padding: 4rem 1rem 5rem;
        text-align: center;
        position: relative;
        min-height: 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .hero::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 30px;
        background: white;
        clip-path: ellipse(60% 100% at 50% 100%);
      }

      .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
      }

      .hero .tagline {
